        toggle = true
        
        else
            local Anim = Instance.new("Animation")
Anim.AnimationId = "rbxassetid://"
local k = Plr.Character.Humanoid:LoadAnimation(Anim)
k:Play()
k:AdjustSpeed(1)

Hats.gun.Handle.Attachment.Orientation = Vector3.new(90,0,0)

Character:WaitForChild("Torso").Attachment.Position = Vector3.new(0,-1.5,-1.5)
            toggle = false
     end
end
end)


